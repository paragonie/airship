<form method="post">{{ form_token() }}
    <fieldset id="new-tag-form" >
        <label for="name">{{ __("Tag Name:") }}</label>
        <input id="name" type="text" name="name" pattern="^[^\#]+$" required="required" value="{{ tag.name|e('html_attr') }}" />
        <button type="submit" class="pure-button pure-button-secondary">
            <i class="fa fa-tag"></i>
            {{ __("Save Tag") }}
        </button>
    </fieldset>
</form>